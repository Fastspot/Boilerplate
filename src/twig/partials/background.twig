{#
	{% include par ~ "background.twig" with {
		customClass: "js-class",
		class: "flex_callout",
		image: image,
		alt: "",
		sources: {
			"0px": img.square.sml,
			"740px": img.ultrawide.med,
			"980px": img.ultrawide.lrg,
			"1220px": img.ultrawide.xlrg
		}
	} %}
#}

<div class="{{ customClass ?: 'js-background' }} {{ class }}_background" data-background-options='{"source": {
{% for key, source in sources %}"{{ key }}": "//images.fastspot.com/{{ vars.images }}/{{ source.width }}x{{ source.height }}/{{ image }}"{% if not loop.last %}, {% endif %}{% endfor %}}, "lazy": true{% if alt %}, "alt": "{{ alt }}"{% endif %}}' aria-hidden="true">
	<div class="{{ class }}_background_fallback" style="background-image: url(' //images.fastspot.com/{{ vars.images }}//{{ img.ultrawide.xxsml.width }}x{{ img.ultrawide.xxsml.height }}/{{ image }}');"></div>
</div>
