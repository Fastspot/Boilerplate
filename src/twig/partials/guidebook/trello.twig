<div class="gb_trello_wrapper">
	{% if trelloCards %}
		{% set trelloCaptions = [
			"Feature Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.",
			"In-Content Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.",
			"Sidebar Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.",
			"Full-Width Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit."
		] %}
		<div class="gb_trello_list">
			{% for group in deck %}
				<div class="gb_trello_section gb_section" id="{{group.type}}">
					<h2 class="gb_trello_section_title" id="trelloList[{{group.type}}]">
						<span class="gb_trello_section_label">{{group.type}}</span>
					</h2>
					<p class="gb_trello_section_caption fs-lg-10 fs-xl-8">{{trelloCaptions[loop.index - 1]}}</p>
					<div class="gb_trello_section_body">
						<div class="gb_topics" data-section="{{label}}">
							{% for item in group.cards %}
								{% if loop.index - 2 >= 0 %}
									{% set prev = group.cards[loop.index - 2] %}
								{% else %}
									{% set prevSize = deck[loop.parent.loop.index - 2].cards.length - 1 %}
									{% set prev = deck[loop.parent.loop.index - 2].cards[prevSize] %}
								{% endif %}

								{% if loop.index + 1 <= loop.length %}
									{% set next = group.cards[loop.index] %}
								{% else %}
									{% set next = deck[loop.parent.loop.index].cards[0] %}
								{% endif %}
								<a class="gb_topic gb_topic_trello gb_topic_link trello_{{item.id}}" href="#trello_{{item.id}}">
									<h3 class="gb_topic_title">{{item.name}}</h3>
									<img class="gb_topic_image" src="{{item.attachments[0].previews[3].url}}" />
								</a>
								<div class="gb_trello_detail" id="trello_{{item.id}}">
									<div class="gb_trello_detail_ribbon">
										{% if prev %}
											<a href="#trello_{{prev.id}}" class="gb_trello_detail_pager gb_trello_detail_pager_prev{% if prev %} pager_active{% endif %}">{{prev.name}}</a>
										{% endif %}
										<a href="#" class="gb_trello_detail_close">View All Components</a>
										{% if next is not empty %}
											<a href="#trello_{{next.id}}" class="gb_trello_detail_pager gb_trello_detail_pager_next{% if next %} pager_active{% endif %}">{{next.name}}</a>
										{% endif %}
									</div>
									<div class="gb_trello_detail_inner fs-lg-10 fs-xl-8 gb_typography">
										<h1 class="gb_trello_detail_title">{{item.name}}</h1>
									</div>
									{% if item.done and item.reference %}
										<div class="gb_trello_detail_component{% if item.type == "In-Content" %} fs-lg-8{% elseif item.type == "Sidebar" %} fs-lg-4{% endif %}">
											{% set component = "../../components/" ~ item.type|lower ~ "/" ~ item.name|lower|replace({
												" ": "-"
											}) ~ ".twig" %}
											{% include component with {
												edit: true
											} %}
										</div>
									{% endif %}
									<div class="gb_trello_detail_inner fs-lg-10 fs-xl-8 gb_typography">
										{% if item.done and not item.reference %}
											<div class="gb_trello_detail_cover" data-image="{% if item.attachments[0].previews[5].url %}{{item.attachments[0].previews[5].url}}{% else %}{{item.attachments[0].url}}{% endif %}">
											</div>
										{% endif %}
										<div class="gb_trello_detail_content gb_typography">{{item.desc}}</div>
										{% if item.done and item.reference and vars.handoff %}
											<h2 class="gb_trello_detail_label">Markup</h2>
<pre class="gb_trello_detail_markup_wrapper">
<code class="gb_trello_detail_markup html">
{% include component ignore missing %}
</code>
</pre>
										{% endif %}
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="gb_section">
			{% for item in contentStrategy %}
				<h2 class="gb_section_title" id="{{item.id}}">{{item.name}}</h2>
				<div class="gb_detail_content gb_typography">{{item.desc}}</div>
			{% endfor %}
		</div>
	{% endif %}
</div>
