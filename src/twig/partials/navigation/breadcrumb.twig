{#
	{% include "../partials/navigation/breadcrumb.twig" with {
		modifier: "lg",
		icon: true,
		links: breadcrumbNav
	} %}
#}

<nav class="breadcrumb_nav{% if modifier %} breadcrumb_nav_{{modifier}}{% endif %}" aria-label="Breadcrumb">
	<div class="breadcrumb_nav_header">
		<h2 class="breadcrumb_nav_title">You are here:</h2>
	</div>
	<ol class="breadcrumb_list" itemscope itemtype="http://schema.org/BreadcrumbList" aria-label="Breadcrumb">
		<li class="breadcrumb_item" itemscope itemprop="itemListElement" itemtype="http://schema.org/ListItem">
			<a class="breadcrumb_pill breadcrumb_pill_link" href="page-home.html" itemprop="item">
				{% if icon %}
				<span class="breadcrumb_pill_icon">{{site.icon("home")}}</span>
				{% endif %}
				<span class="breadcrumb_pill_label" itemprop="name">Home</span>
			</a>
			<meta itemprop="position" content="1">
		</li>
		{% for link in links %}
		<li class="breadcrumb_item" itemscope itemprop="itemListElement" itemtype="http://schema.org/ListItem">
			{% if not loop.last %}
			<a class="breadcrumb_pill breadcrumb_pill_link" href="{{link.href ?: '#'}}" itemprop="item">
				<span class="breadcrumb_pill_label" itemprop="name">{{link.name ?: link}}</span>
			</a>
			{% else %}
			<span class="breadcrumb_pill" itemprop="item">
				<span class="breadcrumb_pill_label" itemprop="name">{{link.name ?: link}}</span>
			</span>
			{% endif %}
			<meta itemprop="position" content="{{loop.index + 1}}">
		</li>
		{% endfor %}
	</ol>
</nav>
