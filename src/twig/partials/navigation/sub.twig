<nav class="sub_nav {% if modifier %} sub_nav_{{modifier}}{% endif %}" aria-label="{% if title %}{{title}}{% else %}In This Section{% endif %}" itemscope itemtype="http://schema.org/SiteNavigationElement">
	<div class="sub_nav_header">
		<h2 class="sub_nav_title">{% if title %}{{title}}{% else %}In This Section{% endif %}</h2>
	</div>
	<button class="js-swap sub_nav_handle" data-swap-target=".sub_nav_list" data-swap-title="{% if title %}{{title}}{% else %}In This Section{% endif %}">
		<span class="sub_nav_handle_label">{% if title %}{{title}}{% else %}In This Section{% endif %}</span>
		<span class="sub_nav_handle_icon">{{site.symbol("")}}</span>
	</button>
	<div class="sub_nav_list">
		{% for link in links %}
			<div class="sub_nav_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
				<a class="sub_nav_link" href="{% if link.href %}{{link.href}}{% else %}#{% endif %}" itemprop="name">
					<span class="sub_nav_link_label">{% if link.name %}{{link.name}}{% elseif link %}{{link}}{% endif %}</span>
				</a>
				{% if link.children %}
					<div class="sub_nav_children">
						{% for child in link.children %}
							<div class="sub_nav_child_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
								<a class="sub_nav_child_link" href="{% if child.href %}{{child.href}}{% else %}#{% endif %}" itemprop="name">{% if child.name %}{{child.name}}{% elseif child %}{{child}}{% endif %}</a>
								{% if child.children %}
									<div class="sub_nav_grandchildren">
										{% for child in child.children %}
											<div class="sub_nav_grandchild_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
												<a class="sub_nav_grandchild_link" href="{% if child.href %}{{child.href}}{% else %}#{% endif %}" itemprop="name">{% if child.name %}{{child.name}}{% elseif child %}{{child}}{% endif %}</a>
											</div>
										{% endfor %}
									</div>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</nav>
