<picture class="{{class}}_picture">
	{% for key, source in sources %}
	<source media="(min-width: {{key}})" srcset="//images.fastspot.com/{{vars.images}}/{{source}}/{{image}}">
	{% endfor %}
	<img class="{{class}}_image" src="//images.fastspot.com/{{vars.images}}/{{sources|first}}/{{image}}" alt=""{% if itemprop %} itemprop="{{itemprop}}"{% endif %}>
</picture>
