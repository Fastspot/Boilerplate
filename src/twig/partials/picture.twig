{% set reference = reference|default(true) %}
<picture class="{{class}}_picture" {% if reference %}data-reference="{% for key, source in sources %}{{key}}: {{source}}{% if not loop.last %}, {% endif %}{% endfor %}"{% endif %}>
	{% for key, source in sources %}
	<source media="(min-width: {{key}})" srcset="{% if source == "placeholder" %}../../images/placeholder.png{% else %}//images.fastspot.com/{{vars.namespace}}/{{source}}/{{image}}{% endif %}">
	{% endfor %}
	<img class="{{class}}_image" src="{% if fallback == "placeholder" %}../../images/placeholder.png{% else %}//images.fastspot.com/{{vars.namespace}}/{{fallback}}/{{image}}{% endif %}" alt="">
</picture>
