{#
	{% include picture with {
		class: "media",
		itemprop: "",
		image: item.image,
		fallback: img.wide.xsml,
		sources: {
			"1220px": img.wide.med,
			"500px": img.wide.sml
		}
	} %}
#}

<div class="js-image {{ class }}_picture_wrapper">
	<picture class="{{ class }}_picture">
		{% for key, source in sources %}
		<source media="(min-width: {{ key }})" data-srcset="{% if source == "placeholder" %}../../images/placeholder.png{% else %}//images.fastspot.com/{{ vars.images }}/{{ source }}/{{ image }}{% endif %}">
		{% endfor %}
		<img class="js-lazy js-lazyload {{ class }}_image" data-src="{% if fallback == "placeholder" %}../../images/placeholder.png{% else %}//images.fastspot.com/{{ vars.images }}/{{ fallback }}/{{ image }}{% endif %}" alt=""{% if itemprop %} itemprop="{{ itemprop }}"{% endif %}>
	</picture>
</div>
<noscript>
	<img class="{{ class }}_image" src="{% if fallback == "placeholder" %}../../images/placeholder.png{% else %}//images.fastspot.com/{{ vars.images }}/{{ fallback }}/{{ image }}{% endif %}" alt=""{% if itemprop %} itemprop="{{ itemprop }}"{% endif %}>
</noscript>