{% if repository.url == "url" or vars.name == "Client Name" %}
	<style>
		.fs-notifications {
			background: #f8f8f8;
			border-top: 5px solid #f99;
			color: #333;
			font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
			padding: 20px 0;
		}

		.fs-notification-label {
			color: #888;
			font-weight: normal;
		}
	</style>
	<section class="fs-notifications">
		<div class="fs-row">
			<div class="fs-cell">
				{% if repository.url == "url" %}
				<h2>
					<span class="fs-notification-label">Update</span>
					<span class="fs-notification-key">repository.url</span>
				</h2>
				{% endif %}
				{% if vars.name == "Client Name" %}
				<h2>
					<span class="fs-notification-label">Update</span>
					<span class="fs-notification-key">vars.name</span>
				</h2>
				{% endif %}
			</div>
		</div>
	</section>
{% endif %}
