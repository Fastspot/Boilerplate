<!-- Media Gallery -->
<div class="media_gallery{% if theme %} theme_{{theme}}{% endif %}">
	{% if title %}
	<header class="media_gallery_header">
		<h2 class="media_gallery_title">{{title}}</h2>
	</header>
	{% endif %}
	<div class="media_gallery_body">
		<div class="js-carousel media_gallery_items" data-carousel-options='{"theme": "base_pagination", "contained": false, "matchHeight": true}'>
			{% for item in items %}
				<div class="media_gallery_item{% if item.caption is empty %} no_caption{% endif %}{% if item.video %} video{% endif %}">
					{% if item.video %}<a class="js-lightbox media_item_link" href="{{item.video}}" title="{{item.caption|striptags}}">{% endif %}
					<figure class="media_gallery_figure" role="group"{% if item.caption %} aria-label="{{item.caption|striptags}}"{% endif %}>
						{% include "../shared/picture.twig" with {
							class: "media_gallery",
							sources: {
								"1220px": img.wide.med
							},
							fallback: img.wide.med,
							image: item.image
						} %}
						{% if item.caption %}
						<figcaption class="media_gallery_figcaption">
							<p>{{item.caption}}</p>
						</figcaption>
						{% endif %}
					</figure>
					{% if item.video %}</a>{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
<!-- END: Media Gallery -->
