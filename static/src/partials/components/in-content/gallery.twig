<div class="media_gallery{% if theme %} theme_{{theme}}{% endif %}">
	{% if title %}
		<header class="media_gallery_header">
			<h2 class="media_gallery_title">{{title}}</h2>
		</header>
	{% endif %}
	<div class="media_gallery_body">
		<div class="js-carousel media_gallery_items" data-carousel-options='{"theme": "base_pagination multi_pagination circle_controls white_circle_controls", "contained": false, "matchHeight": true}'>
			{% for item in items %}
				<div class="media_gallery_item">
					<figure class="media_gallery_figure">
						{% include "../shared/picture.twig" with {
							class: "media_gallery",
							sources: {
								"1220px": img.wide.med
							},
							fallback: img.wide.med,
							image: item.image
						} %}
						{% if item.caption %}
							<figcaption class="media_gallery_figcaption">
								<p>{{item.caption}}</p>
							</figcaption>
						{% endif %}
					</figure>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
