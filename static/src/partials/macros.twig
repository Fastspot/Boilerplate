{% macro symbol(name, modifier) %}
	{% if name %}
		<svg class="symbol symbol_{{name}}{% if modifier %} symbol_{{modifier}}{% endif %}">
			<use xlink:href="../../images/icons.svg{{name}}"></use>
		</svg>
	{% endif %}
{% endmacro %}


