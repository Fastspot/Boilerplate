<nav class="sub_nav {% if modifier %} sub_nav_{{modifier}}{% endif %}" aria-label="Additional Navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
	<div class="sub_nav_header">
		<h2 class="sub_nav_title">{% if title %}{{title}}{% else %}Additional Navigation{% endif %}</h2>
	</div>
	<div class="sub_nav_handle_wrapper">
		<button class="js-sub_nav_handle sub_nav_handle">Additional Navigation <span class="icon">{{site.symbol()}}</span></button>
	</div>
	<div class="js-navigation js-sub-nav	sub_nav_list" data-navigation-handle=".js-sub_nav_handle" data-navigation-options='{"theme": "sub_nav_base", "labels": {"closed": "Additional Navigation", "Open": "Close"}}'>
		{% for link in links %}
			<div class="sub_nav_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
				<a class="sub_nav_link" href="{% if link.href %}{{link.href}}{% else %}#{% endif %}" itemprop="name">{% if link.name %}{{link.name}}{% elseif link %}{{link}}{% endif %}</a>
				{% if link.children %}
					<div class="sub_nav_children">
						{% for child in link.children %}
							<div class="sub_nav_child_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
								<a class="sub_nav_child_link" href="{% if child.href %}{{child.href}}{% else %}#{% endif %}" itemprop="name">{% if child.name %}{{child.name}}{% elseif child %}{{child}}{% endif %}</a>
								{% if child.children %}
									<div class="sub_nav_grandchildren">
										{% for child in child.children %}
											<div class="sub_nav_grandchild_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
												<a class="sub_nav_grandchild_link" href="{% if child.href %}{{child.href}}{% else %}#{% endif %}" itemprop="name">{% if child.name %}{{child.name}}{% elseif child %}{{child}}{% endif %}</a>
											</div>
										{% endfor %}
									</div>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</nav>
