<nav class="sub_nav {{class}}" aria-label="Additional Navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
	{% if title %}
		<header class="sub_nav_header">
			<h2 class="sub_nav_title">Additional Navigation</h2>
		</header>
	{% endif %}
	<div class="js-navigation sub_nav_list" data-navigation-handle=".sub_nav_heading" role="navigation">
		{% for link in links %}
			<div class="sub_nav_item" itemprop="url">
				<a class="sub_nav_link" href="{{link.href}}" itemprop="name">{{link.name}}</a>
			</div>
		{% endfor %}
	</div>
</nav>
