<nav class="sub_nav {{class}}" aria-label="Additional Navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
	<div class="sub_nav_header">
		<h2 class="sub_nav_title">{% if title %}{{title}}{% else %}Additional Navigation{% endif %}</h2>
	</div>
	<div class="sub_nav_handle_wrapper">
		<button class="js-sub_nav_handle sub_nav_handle">Additional Navigation <span class="icon">{{sprite.symbol()}}</span></button>
	</div>
	<div class="js-navigation sub_nav_list" data-navigation-handle=".js-sub_nav_handle" data-navigation-options='{"theme": "sub_nav_base", "labels": {"closed": "Additional Navigation", "Open": "Close"}}'>
		{% for link in links %}
		<div class="sub_nav_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
			<a class="sub_nav_link" href="{{link.href}}" itemprop="name">{{link.name}}</a>
			{% if link.children %}
			<div class="sub_nav_children">
				{% for child in link.children %}
				<div class="sub_nav_child_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
					<a class="sub_nav_child_link" href="{{child.href}}" itemprop="name">{{child.name}}</a>
					{% if child.children %}
					<div class="sub_nav_grandchildren">
						{% for child in child.children %}
						<div class="sub_nav_grandchild_item{% if link.modifier %} {{link.modifier}}{% endif %}" itemprop="url">
							<a class="sub_nav_grandchild_link" href="{{child.href}}" itemprop="name">{{child.name}}</a>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>
				{% endfor %}
			</div>
			{% endif %}
		</div>
		{% endfor %}
	</div>
</nav>
