{% set colorGroups = [
	[
		{
			name: "true_black",
			text: "true_white",
			hex: "#000"
		}
	]
] %}

{% for group in colorGroups %}
	<div class="cr_color_blocks">
		<div class="cr_color_block_row">
			{% for color in group %}
				<div class="cr_color_block_cell">
					<div class="cr_color_block bg_{{color.name}} color_{{color.text}}">
						<div class="cr_color_block_content">{{color.hex}}</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endfor %}
