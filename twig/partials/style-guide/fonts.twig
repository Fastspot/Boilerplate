<div class="crl_fonts">
	<h2>Fonts</h2>
	{% for font in fonts %}
		<div class="crl_font">
			<div class="cr_heading">{{font.family}} {{font.weight}}</div>
			<h3 style="font-family: {{font.family}}; font-weight: {{font.weight}}; margin: 0 0 30px;">The gray goose jumped in a thicket of pumpkins</h3>
		</div>
	{% endfor %}
</div>
