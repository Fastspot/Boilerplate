{% import '../partials/macros.twig' as site %}

{% block data %}
	{% set page = {
		tabTitle: "",
		title: ""
	} %}
{% endblock %}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<title>{{name}} | {{page.tabTitle}}</title>
		<style>
			html {
				font-family: "Neue Haas Grotesk Text Std", Helvetica, Arial, sans-serif;
			}

				body {
					max-width: 740px;

					margin: 0 auto;
					padding: 0 20px;
				}

					h1, h2, h3, h4, h5, h6 {
						font-family: "Neue Haas Grotesk Display Std", Helvetica, Arial, sans-serif;
					}

					h1 {
						font-size: 8vmin;
					}

					.title_logo {
						background: #000;
						color: #fff;
						display: inline-block;
						margin-right: 10px;
						padding: 12px 8px 12px 6px;
						vertical-align: middle;
					}

						.symbol_logo {
							height: 5vmin;
							width: 8vmin;

							display: block;
							fill: currentColor;
						}

					.title_label {
						display: inline-block;
						vertical-align: middle;
					}

					ul {
						list-style: none;
						padding-left: 0;
					}


			/* Ref Group */

			.ref_group > ul {
				border-left: 8px solid #ddd;
				margin-bottom: 40px;
			}

				.ref_group li {
					padding: 13px 20px 12px;
					transition:
						background .25s,
						color .25s;
				}

					.ref_group span {
						display: block;
						font-weight: 700;
						margin: 0 0 14px;
					}


			/* Sitemap */

			.sitemap {
				margin-bottom: 80px;
			}

				.sitemap_group {
					margin-bottom: 40px;
				}

					.sitemap_item {
						border-left: 8px solid;
					}

					.fs-style-guide {
						color: #0B35EA;
						border-left-color: #0B35EA;
					}

					.fs-page {
						color: #6DCF48;
						border-left-color: #6DCF48;
					}

					.fs-ref {
						color: #FD9A02;
						border-left-color: #FD9A02;
					}

					.fs-test {
						color: #21D2AA;
						border-left-color: #21D2AA;
					}

						.sitemap_link {
							color: inherit;
							display: block;
							font-size: 18px;
							padding: 15px 20px;
							text-decoration: none;
							transition:
								background .25s,
								color .25s;
						}

						.sitemap_link:hover,
						.sitemap_link:focus {
							background: #f2f2f2;
						}

						.sitemap_link:visited {
							color: inherit;
						}

						@media print {

							.sitemap_link {
								padding: 2px 0;
							}
						}
		</style>
	</head>
	<body>
		<figure style="display: none;">
			{% include '../../static/svg/sprite.symbol.svg' %}
		</figure>
		<header>
			<h1>
				<span class="title_logo">{{site.symbol("logo")}}</span>
				<span class="title_label">{{page.title|replace({
					"Site": name
				})}}</span>
			</h1>
		</header>
		<main>
			{% block main %}
			{% endblock %}
		</main>
	</body>
</html>
